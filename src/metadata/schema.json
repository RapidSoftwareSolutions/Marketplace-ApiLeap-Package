                }
            ],
            "vendorRequest": {
                "url": "https:\/\/apileap.com\/api\/screenshot\/v1\/htmltoimage",
                "method": "get",
                "requestParameters": [
                    {
                        "type": "form_params",
                        "parameters": [
                            "access_key",
                            "html",
                            "ttl",
                            "fresh",
                            "full_page",
                            "width",
                            "height",
                            "delay",
                            "format",
                            "css"
                        ]
                    }
                ]
            }
        }
    ]
}